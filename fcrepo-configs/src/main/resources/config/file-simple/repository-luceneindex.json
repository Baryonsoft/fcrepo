{
    "name" : "repo",
    "jndiName" : "",
    "workspaces" : {
        "predefined" : ["default"],
        "default" : "default",
        "allowCreation" : true
    },
    "node-types" : ["fedora-node-types.cnd"],
    "storage" : {
        "persistence": {
            "type": "file",
            "path" : "${fcrepo.object.directory:target/objects}"
        },
        "binaryStorage" : {
            "type" : "file",
            "directory" : "${fcrepo.binary.directory:target/binaries}",
            "minimumBinarySizeInBytes" : 4096
        }
    },
    "security" : {
        "anonymous" : {
            "roles" : ["readonly","readwrite","admin"],
            "useOnFailedLogin" : false
        },
        "providers" : [
            { "classname" : "org.fcrepo.auth.common.BypassSecurityServletAuthenticationProvider" }
        ]
    },
    "indexProviders" : {
        "lucene" : {
            "classname" : "lucene",
            "directory" : "target/indexes/lucene"
        }
    },
    "indexes" : {
        "uuid" : {
            "provider" : "lucene",
            "columns" : "jcr:uuid(STRING)",
            "kind" : "unique"
        },
        "primaryType" : {
            "provider" : "lucene",
            "columns" : "jcr:primaryType(STRING)",
            "kind" : "nodetype"
        },
        "mixinType" : {
            "provider" : "lucene",
            "columns" : "jcr:mixinTypes(STRING)",
            "kind" : "nodetype"
        },
        "path" : {
            "provider" : "lucene",
            "columns" : "jcr:path(PATH)"
        },
        "hasMember" : {
            "provider" : "lucene",
            "columns" : "pcdm:hasMember_ref(REFERENCE)"
        },
        "proxyFor" : {
            "provider" : "lucene",
            "columns" : "ore:proxyFor_ref(REFERENCE)"
        }
    },
    "reindexing" : {
        "async" : false
    }
}
